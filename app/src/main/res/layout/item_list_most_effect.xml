<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="12dp">
<ImageView
    android:id="@+id/iv_head"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginRight="8dp"
    android:scaleType="fitXY"
    android:layout_centerVertical="true" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不知道是谁"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/iv_head"
        android:textSize="14sp"
        android:textColor="#333333"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/iv_head"
        android:layout_below="@+id/tv_nick"
        android:layout_alignBottom="@+id/iv_head"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_effect_time"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/icon_ocean_time"/>
        <TextView
            android:id="@+id/tv_effect_time"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="09-11 11:12"
            android:textSize="12sp"
            android:textColor="#333333"/>
        <ImageView
            android:id="@+id/iv_effect_comment"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/icon_ocean_comment"/>
        <TextView
            android:id="@+id/tv_effect_comment"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="12sp"
            android:textColor="#333333"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_cursor"
        android:layout_width="40dp"
        android:layout_height="27dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:src="@drawable/icon_cursor"/>

</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#ebebeb" />
</LinearLayout>
