<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"

    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_test"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:text="11-12 12:23"
        android:textSize="14sp"
        android:textColor="#bbbbbb"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_head"
        android:layout_marginTop="6dp"
        android:text="海阔天空"
        android:textSize="16sp"
        android:textColor="@color/common_top_bar_blue"/>
    <com.xuhai.telescopes.widget.TextWithImage
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_head"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:text=""
        android:textSize="17sp"
        android:textColor="#333333"/>

</RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_ocean"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@+id/tv_content">
        <RelativeLayout
            android:id="@+id/ll_private_ocean"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_no_corner_click">

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="删除"
                android:textColor="@color/gray_normal"
                android:textSize="14sp"
                android:drawableTop="@drawable/icon_delete"/>
            <View
                android:id="@+id/view_private_bottom"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#bbb"
                android:layout_marginLeft="6dp"
                android:layout_alignParentBottom="true"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#bbb"
                android:layout_marginLeft="6dp"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="#bbb"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_no_corner_click">

            <TextView
                android:id="@+id/tv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="邀请"
                android:textColor="@color/gray_normal"
                android:textSize="14sp"
                android:drawableTop="@drawable/icon_invite_friend"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#bbb"
                android:layout_alignParentBottom="true" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#bbb"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="#bbb"/>
        <RelativeLayout
            android:id="@+id/ll_public_ocean"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_no_corner_click">
            <TextView
                android:id="@+id/tv_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="评论"
                android:textColor="@color/gray_normal"
                android:textSize="14sp"
                android:drawableTop="@drawable/icon_comment"/>
            <View
                android:id="@+id/view_public_bottom"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#bbb"
                android:layout_marginRight="6dp"
                android:layout_alignParentBottom="true" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#bbb"
                android:layout_marginRight="6dp"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>