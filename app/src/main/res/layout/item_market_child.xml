<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/market_child_avater"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/bg_test" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/market_child_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我想借一本不存在的书"
                    android:textColor="@android:color/background_dark"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/market_child_userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="亲爹"
                        android:layout_marginTop="3dp"
                        android:textSize="13sp"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(对方请求添加贝壳)"
                        android:layout_marginTop="3dp"
                        android:textSize="12sp"
                        android:textColor="#ff9601"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/market_child_is_read"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/em_unread_count_bg" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>