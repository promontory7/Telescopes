<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/view_title_right_image" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="40dp"
                        android:text="卧槽糟了"
                        android:textColor="@color/top_bar_normal_bg"
                        android:textSize="29sp" />

                    <ImageView
                        android:id="@+id/card_sex"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/water" />
                </LinearLayout>


                <TextView
                    android:id="@+id/card_certification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="40dp"
                    android:text="已通过系统认证"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/card_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="40dp"
                    android:singleLine="true"
                    android:text="学校：仲恺农业工程学院"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/influence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="40dp"
                    android:text="影响力：26"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/card_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="40dp"
                    android:text="等级：8"
                    android:textSize="11dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <com.xuhai.telescopes.widget.CircleImageView
                    android:id="@+id/card_avater"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/bg_test"
                    app:border_color="@android:color/white"
                    app:border_width="0dp" />

                <TextView
                    android:id="@+id/card_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="滚滚红尘千年的呼唤"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/card_add_to_friend"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_corner_click"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="互为贝壳"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/card_talk"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_corner_click"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="临时对话"
        android:textSize="20sp" />


</LinearLayout>
