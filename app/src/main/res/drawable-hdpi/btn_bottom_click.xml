<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false" >
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/white"/>
                    <corners android:bottomRightRadius="@dimen/corner" android:bottomLeftRadius="@dimen/corner" android:topRightRadius="@dimen/no_corner" android:topLeftRadius="@dimen/no_corner"/>
                    <stroke android:color="@color/white" android:width="1dp"/>
                 </shape>
            </item>
        </layer-list>
    </item>
    <item
        android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/lightgray"/>
                    <corners android:bottomRightRadius="@dimen/corner" android:bottomLeftRadius="@dimen/corner" android:topRightRadius="@dimen/no_corner" android:topLeftRadius="@dimen/no_corner"/>
                    <stroke android:color="@color/lightgray" android:width="1dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/white"/>
                    <corners android:bottomRightRadius="@dimen/corner" android:bottomLeftRadius="@dimen/corner" android:topRightRadius="@dimen/no_corner" android:topLeftRadius="@dimen/no_corner"/>
                    <stroke android:color="@color/white" android:width="1dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>