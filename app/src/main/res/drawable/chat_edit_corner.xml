<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape >
            <solid android:color="@color/white"/>
            <corners
                android:topLeftRadius="@dimen/corner"
                android:topRightRadius="@dimen/corner"
                android:bottomLeftRadius="@dimen/corner"
                android:bottomRightRadius="@dimen/corner"/>
            <stroke android:width="1dp" android:color="@color/lightgray" />  
        </shape>
    </item>
    <item android:bottom="1dip"
          android:left="1dip"
          android:top="1dip"
          android:right="1dip">
        <shape >
            <solid android:color="@color/white"/>
            <corners 
                android:topLeftRadius="@dimen/corner"
                android:topRightRadius="@dimen/corner"
                android:bottomLeftRadius="@dimen/corner"
                android:bottomRightRadius="@dimen/corner"/>
            <stroke android:width="1dp" android:color="@color/white" />  
        </shape>
        </item>
</layer-list>